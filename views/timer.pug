html
  head
    title Cuppa Timer
    include partials/head.pug
    link(rel="stylesheet", type="text/css", href="/css/timer.css")

  body(onload="getDisplayElements()")
    div.timer-ui

      div.info-container
        div.info
          div
            i.fas.fa-hourglass-half &nbsp;
            span#timerId=myTimerId
            <!-- div.id-tip Share this ID to invite others to watch this timer. -->
          i#running-state.fas.fa-spinner.fa-spin

      div#dow-display Sunday
      div#timer-display

      div.buttons
        button#start-button.control-button(onclick="startTimer()")
          i.fas.fa-play
        button#stop-button.control-button(onclick="stopTimer()")
          i.fas.fa-pause

  script(type="text/javascript", src="/socket.io/socket.io.js")
  script.
    myTimerId="#{timerId}"
  script(type="text/javascript", src="/js/timerController.js")
  script(type="text/javascript", src="/js/socket.js")
